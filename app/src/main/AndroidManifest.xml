<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pcg.scaleteacher">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera.ar" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScaleTeacher"
        tools:targetApi="31">
        <activity
            android:name=".main.StartOptionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.IntroductionActivity"
            android:exported="false" />
        <activity
            android:name=".main.InputStudyContentActivity"
            android:exported="false" />
        <activity
            android:name=".main.SizeFormalStudyActivity"
            android:exported="false" />
        <activity
            android:name=".main.AngleFormalStudyActivity"
            android:exported="false">
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="optional" />
    </application>

</manifest>